{
  "name": "OpenAI Prompt",
  "icon": "brain.svg",
  "identifier": "tw.unkn0wncode.popclip.extension.chatgpt-jxa",
  "description": "Send the selected text to ChatGPT and append the response.",
  "note": "To use this extension you will need an <a href=\"https://platform.openai.com/account/api-keys\">OpenAPI API key</a>",
  "app": {
    "name": "ChatGPT",
    "link": "https://openai.com/blog/chatgpt"
  },
  "popclipVersion": 2023,
  "applescriptFile": "gpt.scpt",
  "applescriptCall": {
    "handler": "run",
    "parameters": ["text", "option apikey", "option model"]
  },
  "entitlements": ["network"],
  "options": [
    {
      "identifier": "apikey",
      "label": "API Key",
      "type": "string",
      "description": "Obtain an API key from: https://platform.openai.com/account/api-keys"
    },
    {
      "identifier": "model",
      "label": "Model",
      "type": "string",
      "description": "Select the model to use",
      "default": "gpt-4o"
    }
  ]
}
